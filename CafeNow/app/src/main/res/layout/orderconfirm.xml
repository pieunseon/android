<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderConfirmActivity">

    <TextView
        android:id="@+id/MainText"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#2471A3"
        android:textColor="#FDFEFE"
        android:textSize="18dp"
        android:text="   Cafe Now" />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/OrderPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#154360"
            android:text="주문확인"
            android:textAlignment="center"
            android:textColor="#FDFEFE"
            android:textSize="20dp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 주문번호 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="주문번호"
                        android:textSize="15dp"
                        android:textColor="#212F3D"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--주문번호 끝-->

            <View
                android:background="#CEE3F6"
                android:layout_width="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="20dp"
                android:layout_height="4px" />

            <!--주문 내역 시작-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="주문내역"
                        android:textSize="15dp"
                        android:textColor="#212F3D"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="아메리카노"/>
                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="100dp"
                            android:text="ICE"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 주문내역 끝 -->
            <View
                android:background="#CEE3F6"
                android:layout_width="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="20dp"
                android:layout_height="4px" />

            <!-- 수량 시작 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="주문 수량"
                        android:textSize="15dp"
                        android:textColor="#212F3D"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 수량 끝-->

            <View
                android:background="#CEE3F6"
                android:layout_width="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="20dp"
                android:layout_height="4px" />

            <!-- 결제방법 시작 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="결제금액"
                        android:textSize="15dp"
                        android:textColor="#212F3D"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="10dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:text="3000원"
                            android:textAllCaps="false"/>

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="10dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:textSize="15dp"
                            android:textColor="#212F3D"
                            android:text="결제방법"
                            android:textAllCaps="false"/>

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="10dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:text="신용카드"
                            android:textAllCaps="false"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--결제 방법 끝-->
            <View
                android:background="#CEE3F6"
                android:layout_width="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="5dp"
                android:layout_height="4px" />

            <!--별점 등록하기 시작-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="170dp"
                        android:layout_marginRight="150dp"
                        android:text="별점등록하기"
                        android:textColor="#212F3D"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="70dp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratngBar1"
                    style="@android:style/Widget.DeviceDefault.RatingBar"
                    android:layout_width="50dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:max="5"
                    android:numStars="5"
                    android:rating="4"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:stepSize="0.5" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="160dp"
            android:layout_weight="1"
            android:background="#2471A3"
            android:text="확인"
            android:textColor="#FDFEFE"
            android:textSize="14dp" />
    </LinearLayout>
    <!--별점 등록하기 끝-->
</LinearLayout>